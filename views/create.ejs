  <form>
      <div class="container-fluid bg-12">
      <fieldset>
        <legend>Create</legend>
        <p class="lead">Here you can create your Event</p>
        </div>
        <div class="container-fluid bg-13">
        <div class="form-group col-md-6 text-left">
            <label for="inputEmail4">Evento</label>
            <input type="email" placeholder="nombre del evento">
          </div>
              
        <div class="form-group">
          <label for="exampleTextarea">Descripción del evento</label>
          <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
        </div>

        <div class="form-group">
            <label for="exampleSelect1">Nivel de dificultad</label>
            <select class="form-control" id="exampleSelect1">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </div>

          <div class="form-group">
              <label for="inputAddress">Address</label>
              <input type="text" class="form-control" id="inputAddress" placeholder="1234 Av.San Luis">
            </div>

            <div class="form-group">
                <label for="exampleTextarea">Descripción del lugar</label>
                <textarea class="form-control" id="exampleTextarea" rows="2"></textarea>
              </div>

        <div class="form-group">
          <label for="exampleInputFile">Seleccionar foto para el evento</label>
          <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
          <small id="fileHelp" class="form-text text-muted"></small>
        </div>
       
      <div class="form-group">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="gridCheck">
          <label class="form-check-label" for="gridCheck">
            Check me out
          </label>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  
